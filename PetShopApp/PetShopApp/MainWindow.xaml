<Window x:Class="PetShopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShopApp"
        mc:Ignorable="d"
        Title="ООО «Товары для животных»" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FF76E383" >
            <TextBlock Text="ООО «Товары для животных»"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="30"
                       FontWeight="Bold"
                       FontFamily="Comic Sans MS"></TextBlock>
            <Image Source="/Res/logo.png" VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="200,0,0,0"></Image>
        </Grid>
        
    </Grid>
</Window>
